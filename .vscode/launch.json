{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: 現在のファイル",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": [],
      "justMyCode": true,
      "exceptionHandling": {
        "ignore": ["SystemExit"]
      }
    },
    {
      "name": "SUUMO: 全件更新モード",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "console": "integratedTerminal",
      "args": ["--mode", "full_update"],
      "justMyCode": false,
      "env": { "PYTHONPATH": "${workspaceFolder}" },
      "exceptionHandling": {
        "ignore": ["SystemExit"]
      }
    },
    {
      "name": "SUUMO: 新規URL追加モード（シートB9:B18から取得）",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "console": "integratedTerminal",
      "args": ["--mode", "new_only"],
      "justMyCode": false,
      "env": { "PYTHONPATH": "${workspaceFolder}" },
      "exceptionHandling": {
        "ignore": ["SystemExit"]
      }
    },
    {
      "name": "SUUMO: 指定URLを処理",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "console": "integratedTerminal",
      "args": [
        "--mode",
        "new_only",
        "--url",
        "https://suumo.jp/chintai/jnc_000068928596/?bc=100437528760&smk=r01"
      ],
      "justMyCode": false,
      "env": { "PYTHONPATH": "${workspaceFolder}" },
      "exceptionHandling": {
        "ignore": ["SystemExit"]
      }
    },
    {
      "name": "SUUMO: スクレイピングデバッグ",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "console": "integratedTerminal",
      "args": [
        "--mode",
        "debug",
        "--url",
        "https://suumo.jp/chintai/bc_100437808558/",
        "--save-html"
      ],
      "justMyCode": false,
      "env": { "PYTHONPATH": "${workspaceFolder}" },
      "exceptionHandling": {
        "ignore": ["SystemExit"]
      }
    }
  ]
}
