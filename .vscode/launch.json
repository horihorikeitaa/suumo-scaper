{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: 現在のファイル",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": [],
      "justMyCode": true
    },
    {
      "name": "SUUMO: 全件更新モード",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/test_app.py",
      "console": "integratedTerminal",
      "args": [],
      "justMyCode": false,
      "env": { "PYTHONPATH": "${workspaceFolder}" }
    },
    {
      "name": "SUUMO: モジュール実行 (全件更新)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/suumo_scraper/main.py",
      "console": "integratedTerminal",
      "args": ["--mode", "full_update"],
      "justMyCode": false,
      "env": { "PYTHONPATH": "${workspaceFolder}" }
    },
    {
      "name": "SUUMO: モジュール実行 (新規追加)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/suumo_scraper/main.py",
      "console": "integratedTerminal",
      "args": ["--mode", "new_only"],
      "justMyCode": false,
      "env": { "PYTHONPATH": "${workspaceFolder}" }
    },
    {
      "name": "SUUMO: URL指定実行",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/suumo_scraper/main.py",
      "console": "integratedTerminal",
      "args": [
        "--mode",
        "new_only",
        "--url",
        "https://suumo.jp/chintai/jnc_000068928596/?bc=100437528760&smk=r01"
      ],
      "justMyCode": false,
      "env": { "PYTHONPATH": "${workspaceFolder}" }
    },
    {
      "name": "SUUMO: スクレイピングデバッグ",
      "type": "debugpy",
      "request": "launch",
      "module": "src.suumo_scraper.main",
      "console": "integratedTerminal",
      "args": ["--debug", "--url", "https://suumo.jp/chintai/bc_100437808558/"],
      "justMyCode": false,
      "env": { "PYTHONPATH": "${workspaceFolder}" }
    },
    {
      "name": "Pipenv: モジュール実行",
      "type": "debugpy",
      "request": "launch",
      "module": "src.suumo_scraper.main",
      "console": "integratedTerminal",
      "args": [],
      "justMyCode": false,
      "env": { "PYTHONPATH": "${workspaceFolder}" }
    }
  ]
}
